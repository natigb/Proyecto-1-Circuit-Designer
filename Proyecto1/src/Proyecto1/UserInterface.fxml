<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Proyecto1.UserInterfaceController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
            <Menu mnemonicParsing="false" text="Reset">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#resetPane" text="Reset Pane" />
              </items>
            </Menu>
      <Menu mnemonicParsing="false" text="Agregar compuerta">
               <items>
            <MenuItem mnemonicParsing="false" onAction="#crearAND" text="AND" />
            <MenuItem mnemonicParsing="false" onAction="#crearNAND" text="NAND" />
            <MenuItem mnemonicParsing="false" onAction="#crearOR" text="OR" />
            <MenuItem mnemonicParsing="false" onAction="#crearNOR" text="NOR" />
                  <MenuItem mnemonicParsing="false" onAction="#crearXOR" text="XOR" />
                  <MenuItem mnemonicParsing="false" onAction="#crearXNOR" text="XNOR" />
                  <MenuItem mnemonicParsing="false" onAction="#crearNOT" text="NOT" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Inputs">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#addEntrada" text="Agregar entrada" />
               </items>
            </Menu>
      </menus>
    </MenuBar>
      <HBox prefHeight="576.0" prefWidth="900.0">
         <children>
            <VBox fx:id="vbox" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#simularCircuito" prefHeight="100.0" prefWidth="100.0" text="Simular" />
                  <Button mnemonicParsing="false" onAction="#tabla" prefHeight="100.0" prefWidth="100.0" text="Generar Tabla" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#guardarCircuito" prefHeight="102.0" prefWidth="124.0" text="Guardar Circuito" textAlignment="CENTER" wrapText="true" />
               </children>
            </VBox>
            <Pane fx:id="pane" prefHeight="576.0" prefWidth="707.0" />
         </children>
      </HBox>
  </children>
</VBox>
